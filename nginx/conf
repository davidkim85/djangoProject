# upstream for uWSGI
upstream uwsgi_app {
    server unix:/code/uwsgi_app.sock;
}
server {
    listen 80;
    listen [::]:80;
    server_name furmandavid.info www.furmandavid.info;
    server_tokens off;
    location /.well-known/acme-challenge/ {
        allow all;
        root /var/www/certbot;
    }

    location / {
        return 301 https://furmandavid.info$request_uri;
    }
}

server {
    listen 443 default_server ssl http2;
    listen [::]:443 ssl http2;
    server_name furmandavid.info;
    ssl_certificate /etc/nginx/ssl/live/furmandavid.info/fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/live/furmandavid.info/privkey.pem;
    error_log stderr warn;
    access_log /dev/stdout main;

    location / {
        include /etc/nginx/uwsgi_params;
        uwsgi_pass uwsgi_app;
    }

    location /static/ {
        alias /code/static/;
    }
    location /media/ {
        alias /code/media/;
    }
}